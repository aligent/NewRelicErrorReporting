<?xml version="1.0"?>
<config>
    <modules>
        <Aligent_NewRelicErrorReporting>
            <version>0.1.0</version>
        </Aligent_NewRelicErrorReporting>
    </modules>
    <global>
        <models>
            <aligent_newrelicerrorreporting>
                <class>Aligent_NewRelicErrorReporting_Model</class>
                <resourceModel>aligent_newrelicerrorreporting_resource</resourceModel>
            </aligent_newrelicerrorreporting>
            <aligent_newrelicerrorreporting_resource>
                <class>Aligent_NewRelicErrorReporting_Model_Resource</class>
            </aligent_newrelicerrorreporting_resource>
        </models>
        <helpers>
            <aligent_newrelicerrorreporting>
                <class>Aligent_NewRelicErrorReporting_Helper</class>
            </aligent_newrelicerrorreporting>
        </helpers>
    </global>
    <frontend>
        <events>
            <controller_action_predispatch>
                <observers>
                    <newrelic_add_additional_params>
                        <type>singleton</type>
                        <class>aligent_newrelicerrorreporting/observer</class>
                        <method>controllerActionPreDispatch</method>
                    </newrelic_add_additional_params>
                </observers>
            </controller_action_predispatch>
            <controller_action_postdispatch>>
                <observers>
                    <newrelic_add_additional_params>
                        <type>singleton</type>
                        <class>aligent_newrelicerrorreporting/observer</class>
                        <method>controllerActionPostDispatch</method>
                    </newrelic_add_additional_params>
                </observers>
            </controller_action_postdispatch>
        </events>
    </frontend>
</config>